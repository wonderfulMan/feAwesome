{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "./dist",
    "strict":true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/await-to-js/dist/types",
      "node_modules/chalk/types",
      "node_modules/ora/",
      "typing"
    ],
    "lib": [
      "es2015",
      "es2015.promise",
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}